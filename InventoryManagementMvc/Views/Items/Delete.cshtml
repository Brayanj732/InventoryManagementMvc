@model InventoryManagementMvc.Models.Item
@{
    ViewData["Title"] = "Delete Item";
}

<div class="container-main container">
    <div class="form-container" style="max-width: 500px;">
        <div class="text-center mb-4">
            <i class="fas fa-exclamation-triangle" style="font-size: 3rem; color: #ef4444;"></i>
            <h2 class="mt-3">Delete Item</h2>
            <p class="text-muted">Are you sure you want to delete this item?</p>
        </div>

        <div class="card mb-4" style="background: #fef2f2; border: 2px solid #fee2e2;">
            <div class="card-body">
                <p class="mb-2">
                    <strong><i class="fas fa-tag"></i> @Model.Name</strong>
                </p>
                <p class="mb-0 text-muted">
                    <i class="fas fa-dollar-sign"></i> $@Model.Price.ToString("F2")
                </p>
            </div>
        </div>

        <form asp-action="Delete" method="post">
            <input type="hidden" asp-for="Id" />
            <div class="d-flex gap-2">
                <button type="submit" class="btn btn-action btn-delete flex-grow-1" style="padding: 0.75rem;">
                    <i class="fas fa-trash"></i> Yes, Delete It
                </button>
                <a asp-action="Index" class="btn btn-secondary flex-grow-1">
                    <i class="fas fa-times"></i> Cancel
                </a>
            </div>
            @Html.AntiForgeryToken()
        </form>
    </div>
</div>